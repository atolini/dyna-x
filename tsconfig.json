{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "baseUrl": "./src",
    "paths": {
      "@auth/*": ["services/auth/*"],
      "@authorization/*": ["services/authorization/*"],
      "@database/*": ["services/database/*"],
      "@email/*": ["services/email/*"],
      "@event-dispatcher/*": ["services/event-dispatcher/*"],
      "@logger-service/*": ["services/logger-service/*"],
      "@file-storage/*": ["services/file-storage/*"],
      "@template/*": ["services/template/*"],
      "@logger/*": ["services/logger/*"],
      "@event/*": ["utils/event/*"]
    }
  },
  "include": ["src/**/*", "_to_delete"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules"]
}

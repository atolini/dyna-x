{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "moduleResolution": "node",
        "declaration": true, 
        "declarationMap": true, 
        "emitDeclarationOnly": false, 
        "paths": {
            "@database/*": ["./src/services/database/*"], 
            "@response-builder/*": ["./src/utils/response-builder/*"],
            "@storage-service/*": ["./src/services/storage-service/*"], 
            "@logger/*": ["./src/utils/logger/*"],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "node_modules"
    ]
}